# ============================================
# NEWS SUMMARY BOT - Configuration
# ============================================

# --- Telegram (REQUIRED) ---
# 1 bot token, 4 separate group chat IDs
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_VN_STOCK=your_vn_stock_group_chat_id
TELEGRAM_CHAT_WORLD_FINANCE=your_world_finance_group_chat_id
TELEGRAM_CHAT_CRYPTO=your_crypto_group_chat_id
TELEGRAM_CHAT_GOLD=your_gold_group_chat_id

# --- AI Summarization (REQUIRED) ---
# Haiku for real-time summaries, Sonnet for daily reports
AI_PROVIDER=anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AI_MODEL=claude-haiku-4-5-20251001
SONNET_MODEL=claude-sonnet-4-5-20250929

# --- Daily Report ---
# Time in UTC+7 (Vietnam timezone)
DAILY_REPORT_HOUR=22
DAILY_REPORT_MINUTE=0
REPORTS_DIR=daily_reports

# --- X/Twitter (OPTIONAL) ---
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# --- Facebook (OPTIONAL) ---
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here
FACEBOOK_PAGE_IDS=page_id_1,page_id_2,page_id_3

# --- Polling Intervals (seconds) ---
RSS_POLL_INTERVAL=120
TWITTER_POLL_INTERVAL=60
FACEBOOK_POLL_INTERVAL=180

# --- Database ---
DB_PATH=news_bot.db
