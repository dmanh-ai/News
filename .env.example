# ============================================
# NEWS SUMMARY BOT - Configuration
# ============================================
# Copy this file to .env and fill in your credentials

# --- Telegram (REQUIRED) ---
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# --- AI Summarization (REQUIRED for smart summaries) ---
# Choose provider: "openai" or "anthropic"
AI_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
# AI_PROVIDER=anthropic
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
AI_MODEL=gpt-4o-mini

# --- X/Twitter (OPTIONAL) ---
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# --- Facebook (OPTIONAL) ---
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here
FACEBOOK_PAGE_IDS=page_id_1,page_id_2,page_id_3

# --- Polling Intervals (seconds) ---
RSS_POLL_INTERVAL=120
TWITTER_POLL_INTERVAL=60
FACEBOOK_POLL_INTERVAL=180

# --- Database ---
DB_PATH=news_bot.db

# --- Summary Language ---
SUMMARY_LANGUAGE=vi
